{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@navigator/*": ["src/navigator/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@hooks/*": ["src/hooks/*"],
			"@screens/*": ["src/screens/*"],
			"@services/*": ["src/services/*"],
			"@store/*": ["src/store/*"],
			"@styles/*": ["src/styles/*"],
			"@theme/*": ["src/theme/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src", "src/types/env.d.ts"]
}
